<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quang Minh</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-p7H3lZbOaJfGvEfwXjdawPOgrLDeO+K1hGJN1uYnwO5Vc5+aBlQncxl0GqNR9y+AiMSzY+BtwKcbMkXBDNyObQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
<header>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fas fa-tree"></i> Quang Minh
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "CircularList" ? "active" : "")"
                           asp-controller="CircularList" asp-action="Index">
                            <i class="fas fa-link"></i>Circular Linked List
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Stack" ? "active" : "")"
                           asp-controller="Stack" asp-action="Index">
                            <i class="fas fa-layer-group"></i>Stack
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "BinarySearchTree" ? "active" : "")"
                           asp-controller="BinarySearchTree" asp-action="Index">
                            <i class="fas fa-balance-scale"></i>Binary Search Tree
                        </a>
                    </li>
                </ul>

            </div>
        </div>
    </nav>
</header>
<div class="container my-4">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="bg-dark text-white mt-auto py-4">
    <div class="container text-center">
        <h5>Quang Minh</h5>
        <p>© 2024 Data Structures And Algorithms.</p>
        <p>All rights reserved.</p>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js" integrity="sha512-bk6IvxkT67M3wC/a0vYb8YJQvAUKSQUmM8zJqSHTW5ogwEfueG/7+Bf1nX+qOTxQ6RxB0ghVdNP4LLb3J+HR0A==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
